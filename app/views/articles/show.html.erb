<div class="showTitle">
    <%= @article.title %>
</div>
<div class="showBody">
    <p><%= @article.body%></p>
</div>
<div class="showAction">
    <ul >
        <li><%= link_to "Edit", edit_article_path(@article) %></li>
        <li><%= link_to "Delete this article(Admin Only)", article_path(@article), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
        } %></li>
    </ul>
</div>
<hr width="80%">
<div class="showComment"><p>Comments<p></div>
    <%= render @article.comments %>
<hr width="80%">
<div class="addComment">Leave your comment?</div>
<%= render "comments/form" %>

<%= link_to "Back to Home", articles_path %>